<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_register_awal_02"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_bold"
            android:paddingTop="172px"
            android:paddingLeft="68px"
            android:textSize="62px"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register_exp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginTop="-8dp"
            android:paddingLeft="68px"
            android:textSize="39px"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="125dp"
        android:background="@drawable/background_putih">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="68px"
            android:orientation="vertical"
            android:paddingLeft="68px"
            android:paddingBottom="68px">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_id_namaDepan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Nama Depan"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/Abu_abu_gelap"
                        android:textSize="35px" />

                    <EditText
                        android:id="@+id/et_namaDepan"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:hint="exp: Budhi"
                        android:textColor="@color/hitam"
                        android:textSize="42px" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_id_namaBelakang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Nama Belakang"
                        android:textColor="@color/Abu_abu_gelap"
                        android:textSize="35px" />

                    <EditText
                        android:id="@+id/et_namaBelakang"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:hint="exp: Arta"
                        android:textColor="@color/hitam"
                        android:textSize="42px" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_id_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="Email"
                android:textColor="@color/Abu_abu_gelap"
                android:textSize="35px" />

            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="20dp"
                android:ems="10"
                android:hint="exp: debudhiart@gmail.com"
                android:fontFamily="@font/poppins_semi_bold"
                android:inputType="textEmailAddress"
                android:textColor="@color/hitam"
                android:textSize="42px" />

            <TextView
                android:id="@+id/tv_id_jenisKelamin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="Jenis Kelamin"
                android:textColor="@color/Abu_abu_gelap"
                android:textSize="35px" />

            <RadioGroup
                android:id="@+id/rg_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                android:weightSum="10">

                <RadioButton
                    android:id="@+id/rb_laki_laki"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:checked="true"
                    android:text="Laki-laki" />

                <RadioButton
                    android:id="@+id/rb_perempuan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:text="Perempuan" />

            </RadioGroup>

            <TextView
                android:id="@+id/tv_id_umur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="Umur"
                android:textColor="@color/Abu_abu_gelap"
                android:textSize="35px" />

            <SeekBar
                android:id="@+id/sb_umur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/biru"
                android:foregroundTint="@color/biru"
                android:indeterminateTint="@color/biru"
                android:max="70"
                android:min="0"
                android:progress="18"
                android:progressBackgroundTint="@color/biru"
                android:scaleX="1.5"
                android:scaleY="1.5" />

            <TextView
                android:id="@+id/tv_angka_umur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="18"
                android:textAlignment="center"
                android:textColor="@color/Abu_abu_gelap"
                android:textSize="35px" />

            <TextView
                android:id="@+id/tv_id_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="Password"
                android:textColor="@color/Abu_abu_gelap"
                android:textSize="35px" />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/poppins_semi_bold"
                android:hint="exp: qwerty"
                android:inputType="textPassword"
                android:textColor="@color/hitam"
                android:textSize="42px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cb_persyaratan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="35dp" />

                <TextView
                    android:id="@+id/tv_id_persyaratan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-20dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Saya menyetujui segala persyaratan dan ketentuan"
                    android:textColor="@color/Abu_abu_gelap"
                    android:textSize="35px" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_daftar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/biru"
                android:fontFamily="@font/poppins_bold"
                android:padding="37px"
                android:text="Daftar"
                android:textAllCaps="false"
                android:textSize="35px" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_punya_akun"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Sudah punya akun? "
                    android:textColor="@color/Abu_abu_gelap"
                    android:textSize="35px" />

                <TextView
                    android:id="@+id/tv_masuk_sekarang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Masuk Sekarang"
                    android:textColor="@color/biru"
                    android:textSize="35px" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.drawerlayout.widget.DrawerLayout>