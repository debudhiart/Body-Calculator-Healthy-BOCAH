<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailMakanan">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="205px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="105px">

            <TextView
                android:id="@+id/tv_id_view_nama_makanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Semua Makanan"
                android:layout_marginLeft="66px"
                android:textStyle="bold"
                android:layout_marginBottom="26px"
                android:textColor="@color/hitam"
                android:textSize="72px"
                android:fontFamily="@font/poppins_bold"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_marginTop="2dp"
                android:background="@color/Abu_abu_stroke" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="52px"
                android:layout_marginBottom="52px"
                android:weightSum="2">

                <TextView
                    android:id="@+id/tv_id_txt_jumlah_saji"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Satuan"
                    android:layout_weight="1"
                    android:layout_marginLeft="66px"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/hitam"
                    android:textSize="35px"/>

                <TextView
                    android:id="@+id/tv_id_view_satuan_saji"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="66px"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="right"
                    android:text="1 sachets"
                    android:textColor="@color/hitam"
                    android:textSize="35px" />

            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_marginTop="2dp"
                android:background="@color/Abu_abu_stroke" />
            <View
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                android:background="@color/Abu_abu" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="52px"
                android:layout_marginBottom="52px"
                android:weightSum="2">

                <TextView
                    android:id="@+id/tv_id_txt_kalori"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kalori"
                    android:layout_weight="1"
                    android:layout_marginLeft="66px"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/hitam"
                    android:textSize="35px"/>

                <TextView
                    android:id="@+id/tv_id_view_jumlah_kalori"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="130"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_marginRight="66px"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/hitam"
                    android:textSize="35px"/>

            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_marginTop="2dp"
                android:background="@color/Abu_abu_stroke" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="52px"
                android:layout_marginBottom="52px"
                android:weightSum="2">

                <TextView
                    android:id="@+id/tv_id_txt_protein"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Protein"
                    android:layout_weight="1"
                    android:layout_marginLeft="66px"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/hitam"
                    android:textSize="35px"/>

                <TextView
                    android:id="@+id/tv_id_view_jumlah_protein"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="130"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_marginRight="66px"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/hitam"
                    android:textSize="35px"/>

            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_marginTop="2dp"
                android:background="@color/Abu_abu_stroke" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="52px"
                android:layout_marginBottom="52px"
                android:weightSum="2">

                <TextView
                    android:id="@+id/tv_id_txt_lemak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lemak"
                    android:layout_weight="1"
                    android:layout_marginLeft="66px"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/hitam"
                    android:textSize="35px"/>

                <TextView
                    android:id="@+id/tv_id_view_jumlah_lemak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="130"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_marginRight="66px"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/hitam"
                    android:textSize="35px"/>

            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_marginTop="2dp"
                android:background="@color/Abu_abu_stroke" />

        </LinearLayout>

    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu_navigation"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>